    "https://*.snagajob.com/*",
    "https://*.healthcareers.nhs.uk/*",
    "https://*.healthjobsnationwide.com/*",
    "https://*.nurse.com/*",
    "https://*.practicematch.com/*",
    "https://*.askamanager.org/*",
    "https://*.bhw.hrsa.gov/*",
    "https://*.clearancejobs.com/*",
    "https://*.defensejobs.com/*",
    "https://*.jobsforveterans.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/jobs/*",
        "https://*.indeed.com/*",
        "https://*.glassdoor.com/*",
        "https://*.greenhouse.io/*",
        "https://*.lever.co/*",
        "https://*.workday.com/*",
        "https://*.myworkdayjobs.com/*",
        "https://*.workable.com/*",
        "https://*.ashbyhq.com/*",
        "https://*.smartrecruiters.com/*",
        "https://*.icims.com/*",
        "https://*.jobvite.com/*",
        "https://*.bamboohr.com/*",
        "https://*.applytojob.com/*",
        "https://*.recruitee.com/*",
        "https://*.breezy.hr/*",
        "https://*.jazz.co/*",
        "https://*.taleo.net/*",
        "https://*.successfactors.com/*",
        "https://*.avature.net/*",
        "https://*.ultipro.com/*",
        "https://*.paylocity.com/*",
        "https://*.dice.com/*",
        "https://*.monster.com/*",
        "https://*.ziprecruiter.com/*",
        "https://*.careerbuilder.com/*",
        "https://*.simplyhired.com/*",
        "https://*.seek.com/*",
        "https://*.seek.com.au/*",
        "https://*.wellfound.com/*",
        "https://*.angel.co/*",
        "https://*.builtin.com/*",
        "https://*.usajobs.gov/*",
        "https://*.otta.com/*"
      ],
      "js": [
        "utils/humanTyping.js",
        "utils/retryManager.js",
        "utils/rateLimiter.js",
        "utils/selectorManager.js",
        "utils/encryptedStorage.js",
        "utils/universalATS.js",
        "content.js"
      ],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png", "content.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
